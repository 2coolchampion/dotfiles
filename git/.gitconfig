[init]
	defaultBranch = main
[user]
	email = franvidicek@gmail.com
	name = 2coolchampion

[credential]
	helper = /mnt/c/Program\\ Files/Git/mingw64/bin/git-credential-manager.exe

[core]
      pager = delta

[interactive]
      diffFilter = delta --color-only

[delta]
      navigate = true
      light = false
      dark = true
      side-by-side = false
      line-numbers = true

      ; General appearance
      light = false
      plus-style = "#c3e88d"
      minus-style = "#e98594"
      syntax-theme = "None"

      ; Line numbers
      line-numbers = true
      line-numbers-left-style = "#e98594"
      line-numbers-right-style = "#c3e88d"
      line-numbers-minus-style = "#e98594"
      line-numbers-plus-style = "#c3e88d"

      ; Commit decoration
      commit-decoration-style = "bold yellow box"
      file-style = "bold #8aadf4"
      file-decoration-style = "bold #FF6F12"

      ; Diff colors
      zero-style = "dim #cad3f5"
      whitespace-error-style = "#ed8796 reverse"

      ; Other decorations
      hunk-header-style = "bold #8aadf4"
      hunk-header-decoration-style = "#ed8796 box"

[include]
  path = delta/themes.gitconfig

[merge]
      conflictstyle = diff3

[diff]
      colorMoved = default
